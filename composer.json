{
    "name": "Yii2SmallTemplate",
    "description": "Yii 2 Small Template for simple sites",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "2.0.6",
        "yiisoft/yii2-bootstrap": "2.0.5",
        "yiisoft/yii2-swiftmailer": "2.0.4",
        "yiisoft/yii2-imagine": "2.0.3",
        "vova07/yii2-imperavi-widget": "1.2.10",
        "yiisoft/yii2-jui": "2.0.4",
        "kartik-v/yii2-widget-rating": "1.0.0",
        "kartik-v/yii2-grid": "3.0.8",
        "kartik-v/yii2-mpdf": "1.0.0",
        "kartik-v/yii2-editable": "1.7.3",
        "kartik-v/yii2-widget-switchinput": "1.3.0",
        "kartik-v/yii2-widget-select2": "2.0.4",
        "fortawesome/font-awesome": "4.5.0",
        "yiisoft/yii2-authclient": "2.0.5",
        "dmstr/yii2-adminlte-asset": "2.2.4"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
